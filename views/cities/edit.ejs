<h1>Edit <%= city.name %></h1>

<form action="/cities/<%= city.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <div class="form-group">
    <label for="name">Name</label>
    <input class="form-control" type="text" name="name" value="<%= city.name %>">
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    <input class="form-control" type="text" name="image" value="<%= city.image %>">
  </div>

  <div class="form-group">
    <label for="state">State</label>
    <input class="form-control" type="text" name="state" value="<%= city.state %>">
  </div>

  <div class="form-group">
    <label for="dressCode">Dress Code</label>
    <input class="form-control" type="text" name="dressCode" value="<%= city.dressCode %>">
  </div>

  <div class="form-group">
    <label for="lat">Latitude</label>
    <input class="form-control" type="text" name="lat" value="<%= city.lat %>">
  </div>

  <div class="form-group">
    <label for="lng">Longitude</label>
    <input class="form-control" type="text" name="lng" value="<%= city.lng %>">
  </div>

  <button class="btn btn-success">Update City!</button>
</form>
